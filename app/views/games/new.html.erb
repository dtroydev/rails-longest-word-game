<div class="container">
  <div class="row col-8 mx-auto mt-3">
    <h1>New Game</h1>
  </div>
  <div class="row col-8 mx-auto mt-3 justify-content-around">
    <% @letters.each do |letter| %>
      <div class="letter d-flex justify-content-center align-items-center">
        <%=letter%>
      </div>
    <% end %>
  </div>
  <div class="row col-8 mx-auto mt-4">
    <form class="w-100" action="/score" method="post">
      <%= hidden_field_tag :authenticity_token,
          form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class="form-group">
        <label for="word">What is the longest word you can find?</label>
        <div class="form-inline">
          <input type="text" class="wordInput form-control flex-grow-1
" id="word" name="word">
          <input type="submit" value="Play" class="wordSubmit btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>